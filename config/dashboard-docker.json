{
  "uid": "docker-stats",
  "title": "Docker Container Stats",
  "timezone": "",
  "schemaVersion": 27,
  "version": 3,
  "refresh": "30s",
  "panels": [
    {
      "id": 5,
      "title": "Total Running Containers",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(count by (name) (container_last_seen{image!=''}))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0
              }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 5 }
    },
    {
      "id": 6,
      "title": "Total CPU Usage (%)",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{image!=''}[1m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2
        }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 5 }
    },
    {
      "id": 7,
      "title": "Total Memory Usage",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{image!=''})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 0
        }
      },
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 5 }
    },
    {
      "id": 8,
      "title": "Total Network I/O",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total{image!=''}[1m]) + rate(container_network_transmit_bytes_total{image!=''}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0
        }
      },
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 5 }
    },
    {
      "id": 1,
      "title": "Container CPU Usage (%)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{image!=''}[1m])) * 100",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 9 }
    },
    {
      "id": 2,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{image!=''}",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 9 }
    },
    {
      "id": 3,
      "title": "Container Network I/O",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Receive",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Transmit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 9 }
    },
    {
      "id": 4,
      "title": "Container Disk I/O",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_fs_reads_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Read",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_fs_writes_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Write",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 32, "w": 24, "h": 9 }
    },
    {
      "id": 9,
      "title": "Container Restarts",
      "type": "table",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "changes(container_start_time_seconds{image!=''}[1h])",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0
        }
      },
      "gridPos": { "x": 0, "y": 41, "w": 24, "h": 8 },
      "options": {
        "showHeader": true
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}