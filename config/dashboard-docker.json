{
  "uid": "docker-stats",
  "title": "Docker Container Stats",
  "timezone": "",
  "schemaVersion": 27,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "id": 5,
      "title": "Total Running Containers",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(count by (name) (container_last_seen{image!=''}))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0
        }
      },
      "gridPos": { "x": 0, "y": 36, "w": 6, "h": 5 }
    },
    {
      "id": 1,
      "title": "Container CPU Usage (%)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{image!=''}[1m])) * 100",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 9 }
    },
    {
      "id": 2,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{image!=''}",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 9, "w": 24, "h": 9 }
    },
    {
      "id": 3,
      "title": "Container Network I/O",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Receive",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Transmit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 18, "w": 24, "h": 9 }
    },
    {
      "id": 4,
      "title": "Container Disk I/O",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_fs_reads_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Read",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_fs_writes_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Write",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "gridPos": { "x": 0, "y": 27, "w": 24, "h": 9 }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}