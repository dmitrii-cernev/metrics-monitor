{
  "uid": "docker-stats",
  "title": "Docker Container Stats",
  "timezone": "",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "title": "Container CPU Usage (%)",
      "type": "graph",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{image!=''}[1m])) * 100",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "title": "Container Memory Usage",
      "type": "graph",
      "id": 2,
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{image!=''}",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    },
    {
      "title": "Container Network I/O",
      "type": "graph",
      "id": 3,
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Receive",
          "refId": "A"
        },
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{image!=''}[1m]))",
          "legendFormat": "{{ name }} Transmit",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 }
    }
  ],
  "annotations": {
    "list": [
      {
        "name": "Annotations & Alerts",
        "type": "dashboard",
        "builtIn": 1,
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)"
      }
    ]
  }
}